{
  "extends": "react-app",
  "rules": {
    "react-hooks/exhaustive-deps": 0,
    "quotes": [
      "error",
      "single"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-spaced-func": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-multi-spaces": "error",
    "no-empty": "error",
    "no-mixed-spaces-and-tabs": "error",
    "indent": [
      "error",
      2
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true
      }
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "never"
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ]
  }
}
